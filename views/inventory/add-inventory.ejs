
<body>
  <main>
    <h1>Add more Inventory</h1>
      <!-- Flash Message (if any) -->
    <%- messages() %>
    <% if (errors) { %>
        <ul class="notice">
    <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
    <%  }) %>
    </ul>
    <% } %>
    <p>Use this form to add a new vehicle to the inventory table</p>

    <form method="POST" action="/inv/add-inventory" class="form-container">
        <label for="inv_make" class="form-label">Make:</label>
        <input type="text" id="inv_make" name="inv_make" class="form-input" required value="<%= locals.inv_make %>">

        <label for="inv_model" class="form-label">Model:</label>
        <input type="text" id="inv_model" name="inv_model" class="form-input" required value="<%= locals.inv_model %>">

        <label for="inv_year" class="form-label">Year:</label>
        <input type="text" id="inv_year" name="inv_year" class="form-input" maxlength="4" pattern="\d{4}" title="Enter a 4-digit year" required value="<%= locals.inv_year %>">

        <label for="inv_description" class="form-label">Description:</label>
        <textarea id="inv_description" name="inv_description" class="form-input" rows="4" required><%= locals.inv_description %></textarea>

        <label for="inv_image" class="form-label">Image Path:</label>
        <input type="text" id="inv_image" name="inv_image" class="form-input" placeholder="/images/vehicles/no-image.png" required value="<%= locals.inv_image %>">

        <label for="inv_thumbnail" class="form-label">Thumbnail Path:</label>
        <input type="text" id="inv_thumbnail" name="inv_thumbnail" class="form-input" placeholder="/images/vehicles/no-image-tn.png" required value="<%= locals.inv_thumbnail %>">

        <label for="inv_price" class="form-label">Price ($):</label>
        <input type="number" id="inv_price" name="inv_price" class="form-input" min="0" step="1" required value="<%= locals.inv_price %>">

        <label for="inv_miles" class="form-label">Miles:</label>
        <input type="number" id="inv_miles" name="inv_miles" class="form-input" min="0" required value="<%= locals.inv_miles %>">

        <label for="inv_color" class="form-label">Color:</label>
        <input type="text" id="inv_color" name="inv_color" class="form-input" required value="<%= locals.inv_color %>">

        <label for="classification_id" class="form-label">Classification:</label>
        <div class="form-select">
            <%- classifications %>
        </div>

        <button type="submit" class="form-button">Add Vehicle</button>
        </form>

  </main>
</body>
</html>